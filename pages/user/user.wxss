/* pages/user/user.wxss */
page {
  background-color: #ddd;
}
.user .user_info_wrap {
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
  position: relative;
}
.user .user_info_wrap .user_img_wrap {
  position: relative;
}
.user .user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user .user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user .user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user .user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.user .user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid green;
  color: green;
  font-style: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user .user_content {
  position: relative;
}
.user .user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
  color: #666;
  padding-bottom: 100rpx;
}
.user .user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
}
.user .user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user .user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user .user_content .user_main .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user .user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user .user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user .user_content .user_main .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user .user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user .user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user .user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user .user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user .user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user .user_content .user_main .recommed_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
